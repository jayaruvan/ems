@{
    ViewBag.Title = "SupplierDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SupplierDetails</h2>


<!-- row start  List (1)-->
 <div >
<h3><i class="fa fa-angle-right"></i> Dash Board</h3>


<div class="row mt">
    <div class="col-sm-11 col-md-10 col-lg-9">
        <div class="form-panel">
            
            <h4 class="mb">
                <input type="button"  class="btn btn-default"  value="Add New Supplier" data-bind="click:$root.CreateSupplier" />
                </h4>

            <section id="unseen">
                <table class="table table-bordered table-condensed">
                    <thead>
                    <tr>
                        <th>Supplier Name</th>
                        <!-- <th class="numeric">Areas Count</th> -->
                        <th class="numeric">Meters Count</th>
                        <th colspan="2"></th>
                    </tr>
                    </thead>
                    <tbody data-bind="foreach: SuppliersArray">
                    <tr>
                        <td><p data-bind="text: Name"></p></td>
                        <!--<td ><p data-bind="text: AreaDTO().length"></td> -->
                        <td ><p data-bind="text: MeterDTO().length">  </td>
                        <td class=""><a class="btn-link" data-bind="click: $parent.EditSupplier">Edit</a></td>
                        <td class=""><a class="btn-link" data-bind="click: $parent.RemoveSupplier">Delete</a></td>

                    </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </div>
    <!-- col-lg-12-->
</div>
</div>
<!-- /row -->



