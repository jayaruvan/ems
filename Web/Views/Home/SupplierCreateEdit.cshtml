@{
    ViewBag.Title = "ProvinceCreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- row start -->
<h3><i class="fa fa-angle-right"></i> Edit Supplier</h3>

<div class="row mt">
    <div class="col-sm-11 col-md-10 col-lg-9">
        <div class="form-panel">
            <h4 class="mb">Edit Supplier</h4>

            <form class="form-inline" role="form">
                <div class="form-group">

                    <label class="control-label" for="Province_name">Supplier Name</label>

                    <p data-bind="with: supplier">             
                        <input type="text" class="form-control" data-bind='value: Name'  placeholder="Supplier Name"/>       
                    </p>

                </div>
                <div class="form-group">

                    <button type="submit" class="btn btn-submit" data-bind='click: SaveSupplier'>Save</button>

                </div>
            </form>
            <br/>
            <button type="button" class="btn btn-default" data-bind="click:$root.BackToProvinceList" >Back </button>

            <br/>
        </div>
        <!-- /form-panel -->
    </div>
    <!-- /col-lg-12 -->
</div>
<!-- /row -->


<style>
    .validationMessage {
        color: red;
        font-size: 0.8em;
    }
</style>

<script src="~/Scripts/ko/SupplierCreateEdit.js"></script>