@{
    ViewBag.Title = "SubStationCreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SubStationCreateEdit</h2>
        <h3><i class="fa fa-angle-right"></i> Add SubStation To List</h3>

        <div class="row mt">
            <div class="col-sm-11 col-md-10 col-lg-9">
                <div class="form-panel">
                    <h4 class="mb">Add SubStation</h4>

                    <form class="form-inline" role="form">
                        <div class="form-group">
                            <label class="control-label" for="SubStation_name_1">SubStation Name</label>
                            <p data-bind="with: subStation">    
                                <input type="text" class="form-control" data-bind='value: Name'  placeholder="Sub Sation Name "/>     
                            </p>
                        </div>

                        <div class="form-group" data-bind="visible: saveMode">

                            <select class="form-control"  
                                data-bind="options: ProvincesArray, optionsCaption:'Select Province', optionsText: 'Name', optionsValue: 'Id', value: selectedProvince"></select>
                            <select class="form-control"  
                                data-bind="options: AreasArray, optionsCaption:'Select Area', optionsText: 'Name', optionsValue: 'Id', value: selectedArea, enable: AreasArray().length"></select>

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-submit" data-bind='click: SaveSubStation'>Save</button>
                        </div>
                    </form>
              
                    <br/>

                    <button type="button" class="btn btn-default" data-bind="click:$root.BackToProvinceList" >Back </button>

                    <br/>
                </div>
                <!-- /form-panel -->
            </div>
            <!-- /col-lg-12 -->
            </div>
        <!-- /row -->
<script src="~/Scripts/ko/SubStationCreateEdit.js"></script>
